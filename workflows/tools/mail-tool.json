    {
      "parameters": {
        "jsCode": "return items.map(item => {\n  let parsed;\n  try {\n    parsed = JSON.parse(item.json.text);\n  } catch (e) {\n    parsed = { subject: \"\", body: item.json.text };\n  }\n  return { json: parsed };\n});"
